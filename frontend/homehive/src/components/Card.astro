---
interface Props {
  title?: string;
  body: string;
  href: string;
  imageUrl?: string; // Optional image URL
}

const { href, title, body, imageUrl } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    {imageUrl && <img src={imageUrl} alt={title} class="card-image" />}
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    align-items: center; /* Align items vertically */
    gap: 1rem; /* Add space between image and text */
    padding: 1px;
    background-color: #23262d;
    border-radius: 7px;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    display: flex;
    align-items: center; /* Align items vertically */
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  .card-image {
    width: 100px; /* Fixed width for the image */
    height: auto; /* Maintain aspect ratio */
    border-radius: 4px; /* Optional: Rounded corners for the image */
  }
  h2 {
    margin: 20;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-left: 1rem;
    margin-bottom: 0;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
